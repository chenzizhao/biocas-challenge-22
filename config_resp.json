{
    "name": "Audio_Resp_21",
    "n_gpu": 1,

    "arch": {
        "type": "Resp21Model",
        "args": {}
    },
    "data_loader": {
        "type": "Resp21DataLoader",
        "args":{
            "data_dir": "data/SPRSound/",
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "cross_entropy",
    "metrics": [
        "accuracy", "speficity", "sensitivity_task2", "score_task2"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    },

    "main": {
        "task_level": 21,
        "wav_dir": "testcase/task2_wav/",
        "out_file": "testcase/my_output/task21_output.json"
    }
}
