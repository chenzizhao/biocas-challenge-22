{
    "name": "Audio_Resp",
    "n_gpu": 1,

    "arch": {
        "type": "YesNoModel",
        "args": {}
    },
    "data_loader": {
        "type": "YesNoDataLoader",
        "args":{
            "data_dir": "data/resp/",
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    },
    "main": {
        "task_level": 1,
        "wav_dir": "testcase/task1_wav/",
        "out_file": "testcase/my_output/task11_output.json"
    }
}
