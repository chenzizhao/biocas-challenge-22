{
    "name": "Audio_Resp_22",
    "n_gpu": 1,
    "arch": {
        "type": "ASTModel",
        "args": {
            "label_dim":5, 
            "input_fdim":128,
            "input_tdim":768,
            "audioset_pretrain": true
           
        }
    },
    "data_loader": {
        "type": "RespDataLoader",
        "args":{
            "data_dir": "data/SPRSound/",
            "batch_size": 32,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2,
            "task":2,
            "level":2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": {
        "type": "cross_entropy",
        "args": {
            "weight": [0.07, 0.21, 0.24, 0.17, 0.3]
        }
    },
    "metrics": [
        "accuracy", "specificity", "sensitivity_task2", "score_task2"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 10,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 20,

        "tensorboard": true,
        "wandb": false
    },

    "main": {
        "task_level": 22,
        "wav_dir": "testcase/task2_wav/",
        "out_file": "testcase/my_output/task22_output.json"
    }
}
